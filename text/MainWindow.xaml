<Window x:Class="text.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:text"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>

            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Margin="50,50,50,50" CornerRadius="20,20,20,20" Grid.Row="0">
            <Button x:Name="edit_test" Content="Редактировать" Background="Lightgreen" FontSize="20" FontFamily="Arial Black" Grid.Row="2" Click="edit_test_Click" Margin="10,10,10,10"/>
        </Border>


        <Border BorderBrush="Black" BorderThickness="1" Margin="50,50,50,50" CornerRadius="20,20,20,20" Grid.Row="2">
            <Button x:Name="start_test" Content="Тест" Background="LightGreen" FontSize="20" FontFamily="Arial Black" Grid.Row="1" Click="start_test_Click" Margin="10,10,10,10"/>
        </Border>

    </Grid>
</Window>
